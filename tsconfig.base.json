{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@shared/models/*": ["packages/models/src/*"]
      }
    },
    "include": ["apps", "packages"]
  }
